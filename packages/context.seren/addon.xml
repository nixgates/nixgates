		<forum></forum>
		<website></website>
		<source></source>
		<disclaimer lang="en"></disclaimer>
		<assets>
			<icon>ico-fox-gold-final.png</icon>
			<fanart>fanart-fox-gold-final.png</fanart>
		</assets>
		<news>
